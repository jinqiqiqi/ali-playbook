    { src: '^JENKINS_HOME=\"', target: 'JENKINS_HOME="{{ jenkins_home_dir }}"' },
    { src: '^JENKINS_PORT=\"', target: 'JENKINS_PORT="{{ jenkins_listen_port }}"' },
    { src: '^JENKINS_LISTEN_ADDRESS=\"', target: 'JENKINS_LISTEN_ADDRESS="{{ jenkins_listen_addr }}"' },
]

